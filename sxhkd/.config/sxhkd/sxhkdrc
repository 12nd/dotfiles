# nick's sxhkd config

# ---------------------------
# i3 specific binds
# ---------------------------
# (yeah i know im using sxhkd for i3 lol.)
super + shift + q
	i3-msg kill
super + f
	i3-msg fullscreen toggle

# basic workspace management
{_,shift + }super + {h,j,k,l}
	i3-msg {focus,move} {left,down,up,right}
super + s
	i3-msg split toggle
super + {semicolon,apostrophe}
	i3-msg split {h,v}
super + control + {h,j,k,l}
	i3resize {left,down,up,right}

# window modes
super + {shift + s,shift + t,control + t}
	i3-msg layout {split,tabbed,stacking}
super + shift + space
	i3-msg floating toggle
super + control + space # focuses between tiles/floats
	i3-msg focus mode_toggle

# workspace switches
{_,shift + }super + {1-9,0}
	i3-msg {_,move container to }workspace {1-9,10}
super + Tab
	i3-msg workspace back_and_forth

# reload
super + shift + r
	i3-msg reload
super + control + r
	i3-msg restart

# misc
super + control + u
	$TERMINAL -name dropdown -e tmux
super + Delete
	betterlockscreen -l dimblur
super + y
	i3-dmenu-desktop



# ---------------------------
# generic binds
# ---------------------------

# General bindings
super + Return
	$TERMINAL
# same dir term spawn
super + shift + Return
	termdir 
# uses a hack to spawn interative bash that starts in ranger
super + e
	$TERMINAL -e bash --rcfile "$HOME/.scripts/tools/rangerbashrc" -i
super + shift + e
	sdmenu
super + space
	dmenu_run
super + w
	$BROWSER
# hard force quit
super + shift + control + q
	kill -9 `xdotool getwindowfocus getwindowpid`
super + shift + w
	qutebrowser
super + p
	keepassxc
super + shift + p
	$TERMINAL -name floater -e htop
super + control + p
	$TERMINAL -name floater -e sudo powertop
super + shift + a
	$TERMINAL -name floater -e pulsemixer
super + n
	zim
super + shift + n
	$TERMINAL -name floater -e ncmpcpp
super + m
	$TERMINAL -e neomutt
super + c
	$TERMINAL -e bc -l
super + b
	barrier
super + d
	displayselect
# compositor transparency on any program
super + t 
	transset-df -m 0.85 -a

# Reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd && notify-send "sxhkd" "Reloaded sxhkd bindings."

# System hotkeys
{_,shift + ,super + }XF86MonBrightness{Down,Up}
	xbacklight {-dec 2,-dec 10,-set 0,-inc 2,-inc 10,-set 100}
{_,shift + }XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume 0 {-5%,-1%,+5%,+1%} && pkill -RTMIN+10 i3blocks
XF86AudioMute
	pactl set-sink-mute 0 toggle && pkill -RTMIN+10 i3blocks

# Script menus
super + {shift,control} + m
	{_,u}mountmenu
{_,shift + ,control + }Print
	screenshot {_,rect,window}


# Music controls
super + {Left,Right}
	mpc {prev,next}
super + slash
	mpc toggle
super + {up,down}
	mpc volume {+,-}5

