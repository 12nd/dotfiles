[module/date]
type = internal/date
interval = 5

date = " %Y-%m-%d"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5
format-padding = 1

label = %date% %time%

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

